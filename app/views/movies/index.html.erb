
<div class="movie-container <%= @mood_class %>">
  <div class="movies-card d-flex flex-column flex-row <%= @mood_class %>">
    <h2 class="m-1">10 movies, just for you</h2>
    <div class="d-flex flex-row justify-content-center">
      <div class="wrapper">
      <% i = 1 %>
        <% @movies.each do |movie| %>
          <div class="movie-card" data-bs-toggle="modal" data-bs-target="#movie-<%= i %>">
            <div class="movie-poster" style="background: url(<%=movie.poster if movie.poster != nil%>); background-size: cover"></div>
            <div class="card-description p-1<%= ' bad-note'if movie.rating < 50 %>">
              <p><%= movie.rating/10%></p>
            </div>
          </div>

          <div class="modal fade" id="movie-<%= i %>" tabindex="-1" role="dialog" aria-labelledby="movie-<%= i %>" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
              <div class="modal-content">
                <div class="fond p-2 <%= @mood_class %>">
                  <div class="modal-body">
                        <div class="prv" data-bs-toggle="modal" data-bs-target="#movie-<%= i == 1 ? 10 : i - 1 %>"><i class="fas fa-chevron-left"></i></div>
                        <div class="nxt" data-bs-toggle="modal" data-bs-target="#movie-<%= i == 10 ? 1 : i + 1 %>"><i class="fas fa-chevron-right"></i></div>
                    <div class="d-flex">
                      <%= image_tag(movie.poster, class:"showmovie") if movie.poster != nil %>
                      <div class="d-flex flex-column align-items-start justify-content-between ms-5">
                        <div class="d-flex flex-column align-items-start justify-content-start">
                          <div class="close-button" data-bs-dismiss="modal"><h4>+</h4></div>
                          <h1 class="text-start"><%= movie.title%></h1>
                          <h2><%= movie.year %> - <%= movie.duration %> minutes</h2>
                          <% movie.genres.each do |genre| %>
                            <div class="genre d-flex">
                              <%= genre.name %>
                            </div>
                          <% end %>
                        </div>
                        <div class="d-flex flex-column align-items-start justify-content-start">
                          <p class="text-start">Director(s) : <%= movie.directors.join(", ") if movie.directors != nil%></p>
                          <p class="text-start w-75">With : <%= movie.actors.join(", ") %></p>
                          <p class="text-start w-75 mt-3 h5"><%= movie.synopsis %></p>
                        </div>
                        <div class="d-flex justify-content-between w-100">
                        <div class="vodlink d-flex">
                          <% movie.link.each do |link| %>
                            <%= link_to link, target: :_blank do %>
                              <% if link.include? "netflix" %>
                                <%= image_tag("netflix-white.png", size: "102x27")%>
                              <% end %>
                              <% if link.include? "prime" %>
                                <%= image_tag("prime-white.png", size: "102x32")%>
                              <% end %>
                              <% if link.include? "disney" %>
                                <%= image_tag("disney-white.png", size: "102x62")%>
                              <% end %>
                              <% if link.include? "apple" %>
                                <%= image_tag("atv.png", size: "102x38")%>
                              <% end %>
                            <% end %>
                          <% end %>
                        </div class="d-flex align-items-center">
                          <p class="rating<%= ' bad-note'if movie.rating < 50 %>"><%= movie.rating/10 %></p>
                        </div>
                      </div>
                    </div>
                  </div>
                  </div>
                </div>
            </div>
          </div>
          <% i += 1 %>
      <% end %>
      </div>
    </div>
  <div class="btn-suivant text-start mt-3">
    <%= link_to 'Search again', root_path, class: "btn-question effect-previous" %>
  </div>
  </div>
</div>
