
<div class="movie-container <%= @mood_class %>" data-controller="renderer">
  <div class="movies-card d-flex flex-column flex-row <%= @mood_class %>">
    <h2 class="m-1">10 movies, just for you</h2>
    <div class="d-flex flex-row justify-content-center">
      <div class="wrapper" data-renderer-target="display" >
        <%= render 'tenmovies' %>
      </div>
      <div class="d-flex">
        <div class="btn-suivant text-start m-1">
          <%= link_to 'Search again', root_path, class: "btn-question effect-previous" %>
        </div>
        <div class="btn-suivant text-start m-1" data-controller="timeout">
          <button class="btn btn-question disabled" id="shuffle" data-timeout-target="button" data-action="click->renderer#update"><i class="fas fa-random"></i></button>
        </div>
      </div>
    </div>
  </div>
</div>
